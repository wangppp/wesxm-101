{
    "require": {
        "slim/slim": "^3.0",
        "slim/twig-view": "^2.2",
        "illuminate/database": "~5.1",
        "robmorgan/phinx": "^0.9.1"
    },
    "autoload": {
        "psr-4": {
            "frontend\\app\\": "frontend/app/",
            "backend\\app\\": "backend/app/"
        }
    },
    "scripts": {
        "dev": "php -S localhost:8888 -t frontend/public frontend/public/index.php",
        "backend": "php -S localhost:8889 -t backend/public backend/public/index.php"
    },
    "config": {
        "process-timeout": 0
    }
}
